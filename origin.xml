        </xf:item>
        <xf:item>
            <xf:label>Unknown</xf:label>
            <xf:value>xx</xf:value>
        </xf:item>
        <xf:action
            ev:event="xforms-value-changed">
            <xf:setvalue
                ref="instance('desc')/data[@type = 'topic']/geo/@code"
                value="instance('countries')/*[@code = current()]/@geo"/>            
        </xf:action>
    </xf:select1>
    <xf:group>
        <xf:input
            bind="required-origin-other"
            class="small-input">
            <xf:label
                class="control-label conditional-label">Please specify</xf:label>
        </xf:input>
    </xf:group>

</xf:group>
