<?xml version="1.0" encoding="UTF-8"?>
<xf:group
    xmlns="http://www.w3.org/1999/xhtml"
    xmlns:ev="http://www.w3.org/2001/xml-events"
    xmlns:xf="http://www.w3.org/2002/xforms">
    <xf:group
        ref="instance('countries')/*[@code = instance('desc')/data[@type = 'origin']/@code]">
        <xf:output
            mediatype="image/*"
            ref="."/>
    </xf:group>
    <xf:select1
        appearance="minimal"
        incremental="true"
        ref="data[@type = 'origin']/@code">
        <xf:label
            class="control-label">Origin</xf:label>
        <xf:alert>Please select a country.</xf:alert>

        <xf:item>
