<?xml version="1.0" encoding="UTF-8"?>
<xf:group
    xmlns="http://www.w3.org/1999/xhtml"
    xmlns:ev="http://www.w3.org/2001/xml-events"
    xmlns:xf="http://www.w3.org/2002/xforms">
    <xf:group>
        <xf:input
            id="class-input"
            incremental="true"
            ref=".[@type = 'call']/a">
            <xf:label
                class="col-md-2">Class</xf:label>
        </xf:input>
    </xf:group>
    <xf:group>
        <xf:input
            id="cutter-input"
            incremental="true"
            ref=".[@type = 'call']/b">
            <xf:label
                class="col-md-2">Cutter</xf:label>
        </xf:input>
    </xf:group>
    <xf:group>
        <xf:input
            id="call-date-input"
            incremental="true"
            ref=".[@type = 'call']/c">
            <xf:label
                class="col-md-2">Date</xf:label>
            <xf:hint>If a conference publication, date should be the date of the conference</xf:hint>
        </xf:input>
    </xf:group>
</xf:group>
