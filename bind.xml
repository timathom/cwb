<?xml version="1.0" encoding="UTF-8"?>
<xf:bind
    xmlns:ev="http://www.w3.org/2001/xml-events"
    xmlns:xf="http://www.w3.org/2002/xforms"
    xmlns:xs="http://www.w3.org/2001/XMLSchema"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <xf:bind
        ref="instance('desc')/*/*[@type = 'subject']/subject"
        relevant="../category[normalize-space(.)]"/>
    <xf:bind
        id="controlled-boolean"
        ref="instance('desc')/*/*[@controlled = 'true']"
        type="xs:boolean"/>

    <xf:bind
        id="boolean-color"
        ref="data[@type = 'color']"
        relevant="../data[@type = 'ill'] = true()"
        type="xs:boolean"/>
    <xf:bind
        id="required-govt-level"
        ref="data[@type = 'govt']/@level"
        relevant=".. = true()"
        required=".. = true()"/>
    <xf:bind
        id="required-govt-other"
        ref="data[@type = 'govt']/@other"
        relevant="../@level = 'other'"
        required="../@level = 'other'"/>
    <xf:bind
        id="other-extent"
        ref="data[@type = 'extent']/@other"
        relevant="../@unit = 'other'"
        required="../@unit = 'other'"/>
    <xf:bind
        id="integer-extent"
        ref="data[@type = 'extent']"
        required="true()"
        type="xs:integer"/>
    <xf:bind
        id="unit-extent"
        ref="data[@type = 'extent']/@unit"
        required="true()"/>
    <xf:bind
        id="integer-dimensions"
        ref="data[@type = 'dimensions']"
        required="true()"
        type="xs:integer"/>
    <xf:bind
        id="required-lang-code"
        ref="data[@type = 'lang']/@code"
        required="true()"/>
    <xf:bind
        id="required-lang-other"
        ref="data[@type = 'lang']/@other"
        relevant="../@code = 'other'"
        required="../@code = 'other'"/>
    <xf:bind
        id="required-origin-code"
        ref="data[@type = 'origin']/@code"
        required="true()"/>
    <xf:bind
        id="required-origin-other"
        ref="data[@type = 'origin']/@other"
        relevant="../@code = 'other'"
        required="../@code = 'other'"/>

    <xf:bind
        id="barcode-restriction"
        ref="data[@type = 'barcode']"
        required="true()"
        type="cwb:barcode"/>
    <xf:bind
        id="isbn-restriction"
        ref="data[@type = 'isbn']"
        type="cwb:isbn"/>
    <xf:bind
        id="class-restriction"
        readonly="true()"
        ref="data[@type = 'class']"/>
    <xf:bind
        id="subject-condition"
        ref="data[@type = 'topic']/subjects"
        relevant="choices/*"/>
    <xf:bind
        id="geo-other"
        ref="data[@type = 'topic']/geo/@other"
        relevant="../@code = 'other--'"
        required="../@code = 'other--'"/>


    <xf:bind
        ref="data[@type = 'creator']/a/pers"
        relevant="../../type = 'pers'"/>
    <xf:bind
        ref="data[@type = 'creator']/a/corp"
        relevant="../../type = 'org' or ../../type = 'govt'"/>
    <xf:bind
        ref="data[@type = 'contrib']/a/pers"
        relevant="../../type = 'pers'"/>
    <xf:bind
        ref="data[@type = 'contrib']/a/corp"
        relevant="../../type = 'org' or ../../type = 'govt'"/>
    
    
</xf:bind>
