<?xml version="1.0" encoding="UTF-8"?>
<table
    class="table table-condensed"
    xmlns="http://www.w3.org/1999/xhtml"
    xmlns:ev="http://www.w3.org/2001/xml-events"
    xmlns:xf="http://www.w3.org/2002/xforms">
    <thead>
        <tr>
            <th/>
            <th/>
        </tr>
    </thead>
    <tbody>
        <xf:repeat
            bind="mixed-integer-extent"
            id="repeat-extent-input">
            <tr>
                <td>
                    <xf:input
                        class="mixed-integer"
                        id="extent-input"
                        incremental="true"
                        ref=".">
                        <xf:label
                            class="control-label">Extent</xf:label>
                        <xf:alert>Positive integer or Roman numerals</xf:alert>
                    </xf:input>
                    <xf:select1
                        appearance="minimal"
                        incremental="true"
                        ref="@unit">
                        <xf:label
                            class="control-label hidden">Unit</xf:label>
                        <xf:item>
                            <xf:label>pages</xf:label>
                            <xf:value>pp</xf:value>
                        </xf:item>
                        <xf:item>
                            <xf:label>unnumbered</xf:label>
                            <xf:value>upp</xf:value>
                        </xf:item>
                        <xf:item>
                            <xf:label>volume</xf:label>
                            <xf:value>vol</xf:value>
                        </xf:item>
                        <xf:item>
                            <xf:label>volumes</xf:label>
                            <xf:value>vols</xf:value>
                        </xf:item>
                        <xf:item>
                            <xf:label>other</xf:label>
                            <xf:value>other</xf:value>
                        </xf:item>
                    </xf:select1>
                    <xf:group>
                        <xf:input
                            class="small-input"
                            ref="@other">
                            <xf:label
                                class="control-label conditional-label">Please specify</xf:label>
                        </xf:input>
                    </xf:group>
                    <div
                        class="btn-group data-group"
                        role="group">
                        <xf:trigger
                            class="btn btn-default add">
                            <xf:label>+</xf:label>
                            <xf:action
                                ev:event="DOMActivate">
                                <xf:insert
                                    at="index('repeat-extent-input')"
                                    origin="instance('proto')/data[@type = context()/@type]"
                                    ref="."/>
                            </xf:action>
                        </xf:trigger>
                        <xf:trigger
                            class="btn btn-danger remove"
                            ref=".[count(preceding-sibling::data[@type = context()/@type]) &gt; 0]">
                            <xf:label>-</xf:label>
                            <xf:delete
                                ev:event="DOMActivate"
                                ref="."/>
                        </xf:trigger>
                    </div>
                </td>
                <!--<td
                        class="button-cell">                                                                        
                    </td>-->
            </tr>
        </xf:repeat>
    </tbody>
</table>
