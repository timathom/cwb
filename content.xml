<?xml version="1.0" encoding="UTF-8"?>
<table
    class="table"
    xmlns="http://www.w3.org/1999/xhtml"
    xmlns:ev="http://www.w3.org/2001/xml-events"
    xmlns:xf="http://www.w3.org/2002/xforms">
    <tbody>
        <xf:repeat
            id="repeat-content-input"
            ref="data[@type = 'contentType']">
            <tr>
                <td>
                    <xf:group>
                        <xf:select1
                            appearance="minimal"
                            incremental="true"
                            ref="@part">
                            <xf:label
                                class="col-md-2">Part</xf:label>
                            <xf:item>
                                <xf:label>book</xf:label>
                                <xf:value>book</xf:value>
                            </xf:item>
                            <xf:item>
                                <xf:label>DVD</xf:label>
                                <xf:value>dvd</xf:value>
                            </xf:item>
                            <xf:item>
                                <xf:label>CD-ROM</xf:label>
                                <xf:value>cd-rom</xf:value>
                            </xf:item>
                            <xf:item>
                                <xf:label>other</xf:label>
                                <xf:value>other</xf:value>
                            </xf:item>
                        </xf:select1>
                    </xf:group>
                    <xf:group>
                        <xf:input
                            class="small-input"
                            incremental="true"
                            ref="@other">
                            <xf:label
                                class="control-label conditional-label col-md-2">Specify</xf:label>
                        </xf:input>
                    </xf:group>
                    <xf:group>
                        <xf:select1
                            appearance="minimal"
                            incremental="true"
                            ref="term">
                            <xf:label
                                class="col-md-2">Content</xf:label>
                            <xf:item>
                                <xf:label>Select a content type</xf:label>
                                <xf:value>null</xf:value>
                            </xf:item>
                            <xf:itemset
                                ref="instance('content')/type">
                                <xf:label
                                    ref="."/>
                                <xf:copy
                                    ref="."/>
                            </xf:itemset>
                        </xf:select1>
                    </xf:group>
                </td>
                <td>
                    <div
                        class="btn-group data-group"
                        role="group">
                        <xf:trigger
                            class="btn btn-default add">
                            <xf:label>+</xf:label>
                            <xf:action
                                ev:event="DOMActivate">
                                <xf:insert
                                    at="index('repeat-content-input')"
                                    origin="instance('proto')/data[@type = context()/@type]"
                                    ref="."/>
                            </xf:action>
                        </xf:trigger>
                        <xf:trigger
                            class="btn btn-danger remove"
                            ref=".[count(preceding-sibling::data[@type = context()/@type]) &gt; 0]">
                            <xf:label>-</xf:label>
                            <xf:delete
                                ev:event="DOMActivate"
                                ref="."/>
                        </xf:trigger>
                    </div>
                </td>
            </tr>
        </xf:repeat>
    </tbody>
</table>
