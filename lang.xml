<?xml version="1.0" encoding="UTF-8"?>
<xf:group
    xmlns="http://www.w3.org/1999/xhtml"
    xmlns:ev="http://www.w3.org/2001/xml-events"
    xmlns:xf="http://www.w3.org/2002/xforms">

    <xf:select1
        appearance="minimal"
        bind="required-lang-code"
        incremental="true">
        <xf:label
            class="control-label">Language</xf:label>
        <xf:alert>Please select a language</xf:alert>
        <xf:item>
            <xf:label>Spanish</xf:label>
            <xf:value>spa</xf:value>
        </xf:item>
        <xf:item>
            <xf:label>Portuguese</xf:label>
            <xf:value>por</xf:value>
        </xf:item>
        <xf:item>
            <xf:label>Catalan</xf:label>
            <xf:value>cat</xf:value>
        </xf:item>
        <xf:item>
            <xf:label>Galician</xf:label>
            <xf:value>glg</xf:value>
        </xf:item>
        <xf:item>
            <xf:label>Quechua</xf:label>
            <xf:value>que</xf:value>
        </xf:item>
        <xf:item>
            <xf:label>Other</xf:label>
            <xf:value>other</xf:value>
        </xf:item>
    </xf:select1>
    <xf:group>
        <xf:input
            bind="required-lang-other"
            class="small-input">
            <xf:label
                class="control-label conditional-label">Please specify</xf:label>
        </xf:input>
    </xf:group>

</xf:group>
