<?xml version="1.0" encoding="UTF-8"?>
<table
    class="table table-condensed"
    xmlns="http://www.w3.org/1999/xhtml"
    xmlns:ev="http://www.w3.org/2001/xml-events"
    xmlns:xf="http://www.w3.org/2002/xforms">
    <thead>
        <tr>
            <th/>
            <th/>
        </tr>
    </thead>
    <tbody>
        <xf:repeat
            id="repeat-media-input"
            ref="data[@type = 'mediaType']">
            <tr>
                <td>
                    <!--<xf:group>
                        <xf:input
                            class="small-input"
                            incremental="true"
                            ref="@material">
                            <xf:label
                                class="control-label conditional-label">Please specify</xf:label>
                        </xf:input>
                    </xf:group>-->
                    <xf:select1
                        appearance="minimal"
                        incremental="true"
                        ref="term">
                        <xf:item>
                            <xf:label>Select a media type</xf:label>
                            <xf:value>null</xf:value>
                        </xf:item>
                        <xf:itemset
                            ref="instance('media')/type">
                            <xf:label
                                ref="."/>
                            <xf:copy
                                ref="."/>
                        </xf:itemset>
                    </xf:select1>
                </td>
                <td
                    class="button-cell">
                    <div
                        class="btn-group data-group"
                        role="group">
                        <xf:trigger
                            class="btn btn-default add">
                            <xf:label>+</xf:label>
                            <xf:action
                                ev:event="DOMActivate">
                                <xf:insert
                                    at="index('repeat-media-input')"
                                    origin="instance('proto')/data[@type = context()/@type]"
                                    ref="."/>
                            </xf:action>
                        </xf:trigger>
                        <xf:trigger
                            class="btn btn-danger remove"
                            ref=".[count(preceding-sibling::data[@type = context()/@type]) &gt; 0]">
                            <xf:label>-</xf:label>
                            <xf:delete
                                ev:event="DOMActivate"
                                ref="."/>
                        </xf:trigger>
                    </div>
                </td>
            </tr>
        </xf:repeat>
    </tbody>
</table>
