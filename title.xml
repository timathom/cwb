<?xml version="1.0" encoding="UTF-8"?>
<xf:group
    class="info-group"
    id="title-fields"
    ref=".[@type = 'title']"
    xmlns="http://www.w3.org/1999/xhtml"
    xmlns:ev="http://www.w3.org/2001/xml-events"
    xmlns:xf="http://www.w3.org/2002/xforms">
    <xf:label
        class="group-label">Title information</xf:label>
    <xf:group
        id="title-input-subform"/>
    <xf:input
        class="smaller-input"
        ref="a/@article">
        <xf:label>Initial article?</xf:label>
        <xf:hint>If the title starts with an article ("la," "el," "los," "las," etc.), type it here, apart from the rest of the title</xf:hint>
    </xf:input>
    <xf:textarea
        id="title-a-input"
        incremental="true"
        ref="a">
        <xf:label>Title</xf:label>
    </xf:textarea>
    <xf:textarea
        id="title-b-input"
        incremental="true"
        ref="b">
        <xf:label>Subtitle</xf:label>
    </xf:textarea>
    <xf:textarea
        id="title-c-input"
        incremental="true"
        ref="c">
        <xf:label>Statement of responsibility</xf:label>
    </xf:textarea>
</xf:group>
